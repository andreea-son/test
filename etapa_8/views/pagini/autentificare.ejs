<!DOCTYPE html>
<html lang="ro">
    <head>
        <%- include('../fragmente/head'); %>
    </head>
    <body>
        <header>
            <%- include('../fragmente/header'); %>
        </header>
        <main>  
            <%  if(!locals.utilizator){ %>
                <h1>Introduceti datele contului</h1>
                <%- include("../fragmente/login_formular", {action: "/autentificare"}) %>
                <p style="display: inline;">Nu aveti inca un cont?</p>
                <a role="button" class="btn btn-primary text-light mb-2" href="/inregistrare">Inregistrare</a>
            <%  }
                if(locals.eroareLogin){ %>
                <p style="color: red;"><%- locals.eroareLogin %></p>
            <%  } else if(locals.succesLogin){ %>
                <h1><%- locals.succesLogin %></h1>
                <p>Autentificarea a avut succes.</p>
            <%  } %>
        </main>
        <footer>
            <%- include('../fragmente/footer'); %>
        </footer>
    </body>
</html>